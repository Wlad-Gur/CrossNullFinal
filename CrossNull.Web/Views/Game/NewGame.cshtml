@using CrossNull.Logic.Models;
@using CSharpFunctionalExtensions;
@model Result<GameModel>
@{
    ViewBag.Title = "NewGame";
}


<h1>Game</h1>
@if (ViewBag.Message != null)
{
    <h2>@ViewBag.Message</h2>
}
<h2>Your step @Model.Value.PlayerActive.Name</h2>


<style>
    td {
        width: 200px;
        height: 200px;
        border: solid 2px silver;
        text-align: center;
    }
</style>

<table>
    @for (int i = 0; i < 3; i++)
    {
        <tr>
            @for (int j = 0; j < 3; j++)
            {
                //TODO избавиться от ViewBag
                <td>
                    @* @ViewBag.VS[i, j]*@
                    @* @Html.Action("/localhost?key=value&key2=value2&temp=value3")*@
                    @* ("/Game/Step?gameId=123&x=i&y=j") *@
                    @if (ViewBag.VS[i, j] != "?")
                    {
                        @ViewBag.VS[i, j]
                    }
                    else
                    {
                        @Html.ActionLink("Cell this?", "Step", "Game", new { gameId = Model.Value.Id, x = i, y = j }, null)
                    }
                </td>
            }
        </tr>
    }
</table>


