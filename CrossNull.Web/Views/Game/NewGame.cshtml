@using CrossNull.Logic.Models;
@using CSharpFunctionalExtensions;
@model Result<GameModel>
@{
    ViewBag.Title = "NewGame";
}


<h1>New Game</h1>
<h2>Your step @Model.Value.PlayerActive.Name</h2>
<style>
    td {
        width: 200px;
        height: 200px;
        border: solid 2px silver;
        text-align: center;
    }
</style>

<table>
    @for (int i = 0; i < 3; i++)
    {
        <tr>
            @for (int j = 0; j < 3; j++)
            {
                //TODO трансформацию данных перенисти внутрь контроллера, 
                //сделать модель представления с которой тут можно работать.
                <td>
                    @*@Model.Value.State.Cells.Single(s => s.X == i && s.Y == j).ToString()*@
                </td>
            }
        </tr>
    }
</table>


