@using CrossNull.Logic.Models;
@using CSharpFunctionalExtensions;
@model Result<GameModel>;

@{
    ViewBag.Title = "NewGame";
}

<h2>NewGame</h2>
<form action="/" method="post" autocomplete="off">
    <fieldset>
        <legend>Input name of players :</legend>
        <p>
            <label for="login">Player One name:</label>
            <input type="text" name="login" id="login" />
            <label for="password">Password player One:</label>
            <input type="password" name="password" id="password" /><br>
        </p>
        <p>
            <label for="login">Player Two name:</label>
            <input type="text" name="login" id="login" />
            <label for="password">Password player Two:</label>
            <input type="password" name="password" id="password" /><br>
        </p>
        <p>
            <input type="submit" formmethod="post" autocomplete="off" value="Input" color="Red">
            <button type="reset">Cancel</button>
        </p>
    </fieldset>
    <h1>New Game</h1>
    <h2>Your step @ViewBag.Message</h2>
    <style>
        td {
            width: 60px;
            height: 60px;
            border: solid 2px silver;
            text-align: center;
        }
    </style>

    <table>
        <tr>
            <td>7</td>
            <td>8</td>
            <td>9</td>
        </tr>
        <tr>
            <td style="background-color:red;">4</td>
            <td style="background-color:red;">5</td>
            <td style="background-color:red;">6</td>

        </tr>
        <tr>
            <td>1</td>
            <td>2</td>
            <td>3</td>
        </tr>
    </table>
</form>
