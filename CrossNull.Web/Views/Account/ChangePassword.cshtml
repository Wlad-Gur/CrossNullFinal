@model CrossNull.Web.Model.ChangePassViewModel
@{
    ViewBag.Title = "ChangePassword";
}

<h1 style="background-color:antiquewhite">
    Email confirmed<br />
    ChangePassword
</h1>
<form>
    <p>
        <div class="col-auto">
            <label for="login" class="col-lg">
                Enter new password:
            </label>
            @Html.EditorFor(p => p.Password)
        </div>
        <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-20 characters long, contain letters and numbers
        </div>
        <br />
        <div class="col-auto">
            <label for="login" class="col-lg">
                Repeat new password:
            </label>
            @Html.EditorFor(e => e.ConfirmPassword)
        </div>
    </p>
    <p>
        <input type="submit" class="btn btn-primary btn-lg d-grid gap-2 col-6 mx-auto" formmethod="post" autocomplete="off" value="Send" color="Red">
    </p>
    @Html.HiddenFor(h => h.Token)
    @Html.HiddenFor(h => h.UserId)

</form>


